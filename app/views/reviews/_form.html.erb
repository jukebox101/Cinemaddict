<%= form_for @review do |f| %>
  <%= f.label :user_id %>
  <%= f.select :user_id, [[current_user.first_name, current_user.id]] %>
  <br>
  <br>
  <%= f.label :movie_rating %>
  <%= f.select :movie_rating, [1,2,3,4,5] %>
  <br>
  <br>
  <%= f.label :movie_id %>
  <%= f.collection_select(:movie_id, Movie.all, :id, :title) %>
  <br>
  <br>
  <%= f.label :description %><br>
  <%= f.text_area :description, placeholder: "Write review here..." %>
  <br>
  <br>
  <%= f.submit %>
<% end %>
